{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://curveballjs.org/schemas/a12nserver/principal-edit.json",
  "type": "object",
  "title": "PrincipalEdit",
  "description": "This is the request body used for editing principals.",

  "required": ["nickname", "active", "type"],
  "additionalProperties": false,

  "properties": {
    "_links": {},
    "nickname": {
      "type": "string",
      "minLength": 3
    },
    "active": {
      "type": "boolean"
    },
    "type": {
      "enum": ["user", "app", "group"]
    },
    "createdAt": {
      "readOnly": true
    },
    "modifiedAt": {
      "readOnly": true
    },
    "privileges": {
      "readOnly": true
    },
    "userInfo": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "format": "phone"
        },
        "address": {
          "type": "string",
          
        },
        "postalCode": {
          "type": "string",
          "format": "postalCode"
        },
        "city": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "birthdate": {
          "type": "string",
          "format": "date"
        },
        "zoneinfo": {
          "type": "string"
        },
        "givenName": {
          "type": "string"
        },
        "familyName": {
          "type": "string"
        },
        "middleName": {
          "type": "string"
        }
      }
    }
  }
}