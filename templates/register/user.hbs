<form action="{{ action }}" method="post">
  {{# if msg}}
  <div class="msg info">
    <i class="material-icons">info</i>
    <span>{{ msg }}</span>
  </div>
  {{/if}}
  {{# if error}}
  <div class="msg error">
    <i class="material-icons">warning</i>
    <span>{{ error }}</span>
  </div>
  {{/if}}
  <fieldset>
    <label for="nickname">
      <span>Nickname</span>
      <input type="text" name="nickname" id="nickname" required="required" autocomplete="name" />
    </label>

    <label for="emailaddress">
      <span>Email</span>
      <input type="email" name="emailAddress" id="emailaddress" required="required" autocomplete="email" />
      <span class="feedback invalid">
        <i class="material-icons" title="This is not a valid email address" data-error="malformat">info</i>
      </span>
    </label>

    <label for="password">
      <span>Password</span>
      <input type="password" name="password" id="password" required="required" autocomplete="new-password" />
    </label>

    <label for="confirmpassword">
      <span>Confirm Password</span>
      <input type="password" name="confirmPassword" id="confirmpassword" required="required" autocomplete="new-password" />
    </label>

    {{#if mfaRegistrationEnabled}}
      <label for="addmfa" class="checkbox">
        <span>Add MFA Device </span>
        <input type="checkbox" name="addMfa" id="addmfa">
      </label>
    {{/if}}
  </fieldset>
  <fieldset>
    <label>
      <button type="submit">Register</button>
    </label>
  </fieldset>

  {{#each hiddenFields}}
  <input type="hidden" name="{{@key}}" value="{{this}}" />
  {{/each}}

</form>
