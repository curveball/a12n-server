{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://curveballjs.org/schemas/a12nserver/server-stats.json",
    "type": "object",
    "title": "ServerStats",
    "description": "This object contains statistics about the server.",
    "required": [
        "stats"
    ],
    "properties": {
        "stats": {
            "type": "object",
            "description": "The statistics about the server.",
            "required": [
                "user",
                "app",
                "group",
                "privileges",
                "tokensIssued"
            ],
            "properties": {
                "user": {
                    "type": "number",
                    "description": "Total number of users."
                },
                "app": {
                    "type": "number",
                    "description": "Total number of registered apps."
                },
                "group": {
                    "type": "number",
                    "description": "The number of user groups on the server."
                },
                "privileges": {
                    "type": "number",
                    "description": "The number of privilege-types."
                },
                "tokensIssued": {
                    "type": "number",
                    "description": "The number of tokens issued by the server."
                }
            }
        }
    }
}
